{
    "include": ["src", "types"],
    "compilerOptions": {
        "paths": {
            "~/*": ["./src/*"],
            "@/*": ["./public/*"]
        },
        "module": "es2020",
        "target": "es2020",
        "moduleResolution": "node",
        "jsx": "preserve",
        "baseUrl": "./",
        "types": ["svelte"],
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "error"
    }
}
